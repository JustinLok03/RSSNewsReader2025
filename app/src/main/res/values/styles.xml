<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/background</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.TitleLarge</item>
    </style>

    <style name="Widget.App.PopupMenu" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/background</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/background</item>
        <item name="itemRippleColor">@color/bottom_nav_item_color</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
    </style>

    <style name="Widget.App.SmallButton" parent="Widget.Material3.Button.IconButton">
        <item name="iconSize">18dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/text</item>
    </style>

    <style name="Widget.App.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/text</item>
        <item name="iconTint">@color/text</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="iconPadding">16dp</item>
    </style>

    <style name="Widget.App.TextButton.Dialog" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="rippleColor">@color/primary_opacity16</item>
    </style>

    <style name="Widget.App.FilledButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/background</item>
        <item name="iconTint">@color/background</item>
        <item name="iconPadding">16dp</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="Widget.App.OutlineButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="iconTint">@color/primary</item>
        <item name="iconPadding">16dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="backgroundTint">@color/background</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="colorPrimary">@color/background</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.TextButton.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.TextButton.Dialog</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheetDialog</item>
    </style>

    <style name="Widget.App.BottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/background</item>
    </style>

    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="color">@color/text</item>
    </style>

    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="color">@color/text</item>
    </style>

    <style name="Widget.App.EntryCard" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/background</item>
        <item name="strokeColor">@color/background</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_bg_color</item>
        <item name="strokeColor">@color/stroke</item>
        <item name="rippleColor">@color/primary</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/background</item>
    </style>

</resources>